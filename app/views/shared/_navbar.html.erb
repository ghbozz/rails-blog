<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "https://cdn.freebiesupply.com/logos/large/2x/rockstar-logo-black-and-white.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <div class="navbarbtn">
        <% if current_user.admin %>
          <div class="btn"><%= link_to'Add post', new_post_path  %></div>
        <% end %>
        <div class="btn"><%= link_to 'All posts', posts_path %></div>
        <div class="btn">News</div>
      </div>
      <!-- Login link (when logged out) -->
    <% end %>
  </div>

  <div class="log">
    <% if current_user %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link") %>
    <% else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to('Register', new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link")  %>
    <% end %>
  </div>
</div>

